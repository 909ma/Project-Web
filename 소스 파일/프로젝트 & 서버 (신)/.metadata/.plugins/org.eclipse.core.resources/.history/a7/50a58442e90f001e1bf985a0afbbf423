        { "/SearchMovie", "영화 찾기" }
    };
%>

<div class="topnav">
    <% for (String[] menuItem : menuItems) { %>
        <a href="<%= contextPath + menuItem[0] %>" <% if (currentPage.startsWith(contextPath + menuItem[0])) { %>class="active"<% } %>>
            <%= menuItem[1] %>
        </a>
    <% } %>
</div>


